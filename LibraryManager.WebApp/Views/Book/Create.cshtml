@model LibraryManager.WebApp.Models.BookVM

<h4>Add new book:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberInSeries" class="control-label">Number in series</label>
                <input asp-for="NumberInSeries" class="form-control" />
                <span asp-validation-for="NumberInSeries" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfPages" class="control-label">Number of pages</label>
                <input asp-for="NumberOfPages" class="form-control" />
                <span asp-validation-for="NumberOfPages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author.Id" class="control-label">Author Id</label>
                <input asp-for="Author.Id" class="form-control" />
                <span asp-validation-for="Author.Id" class="text-danger"></span>
            </div>      
            <div class="form-group">
                <label asp-for="PublishHouse.Id" class="control-label">PublishHouse Id</label>
                <input asp-for="PublishHouse.Id" class="form-control" />
                <span asp-validation-for="PublishHouse.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
